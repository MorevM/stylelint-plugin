{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"strict": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"checkJs": false,
		"allowJs": false,
		"skipLibCheck": true,
		"baseUrl": ".",
		"types": ["node", "vitest/globals"],
		"paths": {
			"#modules/shared": ["./src/modules/shared/index.ts"],
			"#modules/shared/*": ["./src/modules/shared/*"],
			"#modules/bem": ["./src/modules/bem/index.ts"],
			"#modules/bem/*": ["./src/modules/bem/*"],
			"#modules/postcss": ["./src/modules/postcss/index.ts"],
			"#modules/postcss/*": ["./src/modules/postcss/*"],
			"#modules/selectors": ["./src/modules/selectors/index.ts"],
			"#modules/selectors/*": ["./src/modules/selectors/*"],
			"#modules/rule-utils": ["./src/modules/rule-utils/index.ts"],
			"#modules/rule-utils/*": ["./src/modules/rule-utils/*"],
			"#modules/test-utils": ["./src/modules/test-utils/index.ts"],
			"#modules/test-utils/*": ["./src/modules/test-utils/*"],
			"#modules/meta": ["./src/modules/meta/index.ts"],
			"#modules/meta/*": ["./src/modules/meta/*"],
			"#rules": ["./src/rules/index.ts"],
			"#rules/*": ["./src/rules/*"],
		},
	},
	"ts-node": {
		"esm": true,
	},
	"include": [
		"./docs/.vitepress/**/*.ts",
		"**/*.ts",
	],
	"exclude": [
		"dist",
	],
}
