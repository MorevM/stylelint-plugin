{
	"name": "@morev/stylelint-plugin",
	"description": "Stylelint rules for BEM and SCSS best practices",
	"type": "module",
	"private": true,
	"version": "0.0.0",
	"engines": {
		"node": ">=20"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"author": {
		"name": "Maxim Morev",
		"email": "max.seainside@gmail.com"
	},
	"homepage": "https://github.com/MorevM/stylelint-plugin#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/MorevM/stylelint-plugin"
	},
	"keywords": [
		"bem",
		"scss",
		"stylelint",
		"stylelint-plugin"
	],
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"prepare": "lefthook install",
		"test": "vitest",
		"test:dev": "vitest --watch --reporter=dot",
		"lint": "yarn lint:eslint && yarn lint:stylelint",
		"lint:fix": "yarn lint:eslint:fix && yarn lint:stylelint:fix",
		"lint:eslint": "eslint \"**/*.{js,ts,vue,json,json5,jsonc,yml,yaml,md}\"",
		"lint:eslint:fix": "eslint \"**/*.{js,ts,vue,json,json5,jsonc,yml,yaml,md}\" --fix",
		"lint:stylelint": "stylelint \"**/*.{css,scss}\" --allow-empty-input",
		"lint:stylelint:fix": "stylelint \"**/*.{css,scss}\" --fix --allow-empty-input",
		"docs:dev": "vitepress dev docs",
		"build": "rm -rf dist && tsup",
		"release": "release-it --disable-metrics"
	},
	"dependencies": {
		"@morev/utils": "^3.13.1",
		"postcss": "^8.5.6",
		"postcss-selector-parser": "^7.1.0",
		"valibot": "^1.1.0"
	},
	"devDependencies": {
		"@morev/commitlint-config": "^0.2.2",
		"@morev/eslint-config": "^39.1.0",
		"@morev/stylelint-config": "^8.0.1",
		"@morev/stylelint-testing-library": "^1.0.0",
		"@release-it/conventional-changelog": "^9.0.1",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/node": "22",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "9.32.0",
		"lefthook": "^1.12.2",
		"postcss-scss": "^4.0.9",
		"release-it": "^19.0.4",
		"sass": "^1.90.0",
		"stylelint": "^16.23.0",
		"tsup": "^8.5.0",
		"tsx": "^4.20.4",
		"typescript": "^5.8.3",
		"unplugin-vue-components": "^29.0.0",
		"vite-tsconfig-paths": "^5.1.4",
		"vitepress": "^1.6.3",
		"vitest": "3.2.4"
	}
}
